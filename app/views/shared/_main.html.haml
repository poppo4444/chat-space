.main
  = link_to edit_group_path(@group) do
    .edit-botton Edit
  .group
    %p.group--name.group--name__font= @group.name
    %p.group--member.group--member__font= @group.users.name

  - @messages.each do |message|
    .tweet-space
      %p.tweet-space--username= message.user.name
      %a.tweet-space--timesstamp= message.created_at.strftime('%Y/%m/%d %H:%M')
      %p.tweet-space--text= message.body
  .tweet-box
    = form_for([@group, @message]) do |f|
      = f.text_field :body, placeholder: "メッセージを入力してください"
      = fa_icon "photo",class: "fa_icon"
      = f.file_field :image
      = f.submit "Send", class: 'chat-group-form__action-btn' 
