    %meta{charset: "utf-8"}
      %link{ href: "messages.scss", rel: "stylesheet"}
  %body
    .sidebar
      .user
        %span{class: "user--name user--name__font" }aritomo
        = fa_icon "edit 1x", class: "fa_icon", action:"groups/new"
        = fa_icon "gear 1x", class: "fa_icon"
